<!DOCTYPE html>
<html>
  <head>
    <title>Laptop Labs</title>
    <%= favicon_link_tag asset_path('main/icon_logo.png') %>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= javascript_importmap_tags %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma-rtl.min.css">
    <script src="https://js.stripe.com/v3"></script>
  </head>

  <body>
    <header>
      <%= render "layouts/navigation" %>
        <% if flash[:notice] %>
          <p class="has-text-centered has-background-success has-text-white">
            <%= flash[:notice] %>
          </p>
        <% end %>
        <p class="alert has-text-centered has-background-success has-text-white"><%= alert %></p>
    </header>

    <div class="section">
      <div class="container">
        <%= render "layouts/search" %>
        <br>
        <%= render_breadcrumbs :separator => ' > ' %>
        <%= yield %>
      </div>
    </div>
    <%= render "layouts/footer" %>
  </body>
</html>
