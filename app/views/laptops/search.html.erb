<h1 class="title is-2">Search Results</h1>

<% if params[:keywords] != ""%>
  <p>
    Word Search Result: <%= params[:keywords] %> %>
  </p>
<% end %>

<% if @laptops.size != 0%>
  <ul>
    <% @laptops.each do |laptop| %>
      <li><%= link_to laptop.name, laptop %></li>
    <% end %>

    <%= paginate @laptops %>
  </ul>
<% else %>
  <p>No results found.</p>
<% end %>

